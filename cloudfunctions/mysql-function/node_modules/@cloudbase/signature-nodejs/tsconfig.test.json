{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "moduleResolution": "node",
    "types": [
      "node",
      "jest"
    ],
    "outDir": "lib",
    "resolveJsonModule": true,
    "noResolve": false,
    "newLine": "lf",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
